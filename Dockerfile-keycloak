FROM maven:3.9.8-eclipse-temurin-21 AS builder
WORKDIR /app
COPY keycloak/pom.xml .
COPY keycloak/src ./src
RUN mvn clean package -DskipTests

FROM quay.io/keycloak/keycloak:24.0.1
COPY --from=builder /app/target/keycloak-1.0.0.jar /opt/keycloak/providers/registration-provider.jar
COPY ./keycloak/realm.json /opt/keycloak/data/import/realm.json
ENTRYPOINT ["/opt/keycloak/bin/kc.sh"]

CMD [ "start-dev", "--import-realm", "--health-enabled=true" ]
