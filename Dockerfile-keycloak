# --- Stage 1: Maven Builder ---
FROM maven:3.9.8-eclipse-temurin-21 AS maven-builder
WORKDIR /app
COPY keycloak/pom.xml .
COPY keycloak/src ./src
RUN mvn clean package -DskipTests

# --- Stage 2: Keycloak Optimizer ---
FROM quay.io/keycloak/keycloak:latest AS kc-optimizer
COPY --from=maven-builder /app/target/keycloak-1.0.0.jar /opt/keycloak/providers/registration-provider.jar

# Build-time variables MUST match your runtime DB
ENV KC_DB=postgres

RUN /opt/keycloak/bin/kc.sh build

# --- Stage 3: Final Runtime ---
FROM quay.io/keycloak/keycloak:latest
WORKDIR /opt/keycloak

COPY --from=kc-optimizer /opt/keycloak/ /opt/keycloak/
COPY ./keycloak/realm.json /opt/keycloak/data/import/realm.json

# Use start-dev with --optimized
ENTRYPOINT ["/opt/keycloak/bin/kc.sh", "start-dev", "--import-realm"]